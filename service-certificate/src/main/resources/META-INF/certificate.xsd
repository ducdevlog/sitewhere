<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema
        xmlns:ds="http://sitewhere.io/schema/sitewhere/microservice/common/datastore"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns="http://sitewhere.io/schema/sitewhere/microservice/certificate"
        targetNamespace="http://sitewhere.io/schema/sitewhere/microservice/certificate"
        elementFormDefault="qualified" attributeFormDefault="unqualified">

    <xsd:import
            namespace="http://sitewhere.io/schema/sitewhere/microservice/common"
            schemaLocation="https://sitewhere.io/schema/sitewhere/microservice/common/current/microservice-common.xsd"/>

    <xsd:import
            namespace="http://sitewhere.io/schema/sitewhere/microservice/common/datastore"
            schemaLocation="https://sitewhere.io/schema/sitewhere/microservice/common/current/datastore-common.xsd"/>

    <xsd:element name="certificate" type="certificateType">
        <xsd:annotation>
            <xsd:documentation>
                Provides configuration information for the
                SiteWhere certificate management microservice.
            </xsd:documentation>
        </xsd:annotation>
    </xsd:element>

    <!-- Contains information about device state management -->
    <xsd:complexType name="certificateType">
        <xsd:all>
            <xsd:element ref="ds:certificate-datastore"/>
        </xsd:all>
    </xsd:complexType>

</xsd:schema>